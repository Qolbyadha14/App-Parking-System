@model App_Parking_System.ViewModels.ParkingSettingViewModel
@{
    ViewData["Title"] = "Setting";
}

<h1 class="text-center mb-4">Parking Settings</h1>
<div class="row">
    <div class="col-md-12">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <form asp-action="SettingUpdate" method="post">

            <div class="mb-3">
                <label for="MaxLots" class="form-label">Max Lots Parking</label>
                <input type="number" class="form-control" name="MaxLots" id="MaxLots" value="@Model.MaxLots" required>
            </div>

            <div class="mb-3">
                <label for="Price" class="form-label">Price</label>
                <input type="number" class="form-control" name="Price" id="Price" value="@Model.Price" required>
            </div>

            <div class="mb-3">
                <label for="PerHours" class="form-label">Hours</label>
                <input type="number" class="form-control" name="Hours" id="Hours" value="@Model.Hours" required>
            </div>

            <button type="submit" class="btn btn-primary">Save Setup</button>
        </form>
    </div>
</div>




