@model App_Parking_System.ViewModels.ReportsViewModel
@{
    ViewData["Title"] = "Reports";
}

<h1 class="text-center mb-4">Parking Reports</h1>

<div class="row">
    <div class="col-md-6">
        <h2>Summary</h2>
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <td>Total lots</td>
                    <td>@Model.TotalLots</td>
                </tr>
                <tr>
                    <td>Available lots</td>
                    <td>@Model.AvailableLots</td>
                </tr>             
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <h3>Vehicle Group Types</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Type</th>
                    <th scope="col">Count</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var group in Model.VehiclesByType)
                {
                    <tr>
                        <td>@group.Key</td>
                        <td>@group.Count</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="col-md-6">
        <h3>Vehicle Group Color</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Type</th>
                    <th scope="col">Count</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var group in Model.VehiclesByColors)
                {
                    <tr>
                        <td>@group.Key</td>
                        <td>@group.Count</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
<div>
    <div class="col-md-12">
        <h3>Vehicle Group Odd and Even Police numbers</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Type</th>
                    <th scope="col">Count</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var group in Model.VehiclesByPoliceNumber)
                {
                    <tr>
                        <td>@group.Key</td>
                        <td>@group.Count</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div>
    <div class="col-md-12">
        <h3>List Vehicle</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">PoliceNumber</th>
                    <th scope="col">Type</th>
                    <th scope="col">Color</th>
                    <th scope="col">CheckInTime</th>
                    <th scope="col">CheckOutTime</th>
                    <th scope="col">LotNumber</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var datas in Model.Vehicles)
                {
                    <tr>
                        <td>@datas.PoliceNumber</td>
                        <td>@datas.Type</td>
                        <td>@datas.Color</td>
                        <td>@datas.CheckInTime</td>
                        <td>@datas.CheckOutTime</td>
                        <td>@datas.LotNumber</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



