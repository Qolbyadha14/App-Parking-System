@model App_Parking_System.ViewModels.CheckInViewModel
@{
    ViewData["Title"] = "Home";
}

<h1 class="text-center mb-4">Parking System</h1>
<div class="row">
    <div class="col-md-12">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <h2>Check In</h2>
        <form asp-action="CheckIn" method="post">
            <div class="mb-3">
                <label for="policeNumber" class="form-label">Police Number</label>
                <input type="text" class="form-control" name="PoliceNumber" id="PoliceNumber" required>
                <span asp-validation-for="PoliceNumber" class="text-danger"></span>

            </div>
            <div class="mb-3">
                <label for="Type" class="form-label">Vehicle Type</label>
                <select id="vehicleType" class="form-select" name="Type">
                    <option value="Car">Car</option>
                    <option value="Motorbike">Motorbike</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="Color" class="form-label">Color</label>
                <label for="color">Color:</label>
                <input type="text" class="form-control" id="color" name="Color" required />
               
            </div>
            <button type="submit" class="btn btn-primary">Check In</button>
        </form>
    </div>
    <div class="col-md-6">
        <h2>Check Out</h2>
        <form asp-action="CheckOut" method="post">
            <div class="mb-3">
                <label for="policeNumber" class="form-label">Police Number</label>
                <input type="text" class="form-control" name="PoliceNumber" id="PoliceNumber" required>
                <span asp-validation-for="PoliceNumber" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Check Out</button>
        </form>
    </div>
</div>
